rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================================
    // Helper function: 익명 사용자 여부 확인 (P3-01)
    // - 익명 로그인 사용자의 쓰기 작업 제한을 위한 함수
    // - sign_in_provider가 'anonymous'가 아닌 경우 true 반환
    // ============================================================
    function isNotAnonymous() {
      return request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
    
    // Helper function: Validate text data structure
    function isValidTextData() {
      let data = request.resource.data;
      return data.keys().hasAll(['content', 'type', 'characterCount', 'createdAt', 'updatedAt'])
        && data.content is string
        && data.content.size() > 0
        && data.content.size() <= 10000
        && data.type in ['edit', 'reference', 'script']
        && data.characterCount is int
        && data.characterCount >= 0
        && data.createdAt is timestamp
        && data.updatedAt is timestamp;
    }
    
    // Helper function: Validate tracking post data
    function isValidPostData() {
      let data = request.resource.data;
      return data.keys().hasAll(['content', 'sourceTextId', 'createdAt', 'updatedAt'])
        && data.content is string
        && data.content.size() > 0
        && data.sourceTextId is string
        && data.createdAt is timestamp
        && data.updatedAt is timestamp;
    }
    
    // Users collection - only authenticated users can read/write their own data
    match /users/{userId} {
      // Allow read/write only to the owner
      allow read, write: if isOwner(userId);
      
      // User profile subcollection
      match /profile/{profileId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============================================================
      // User texts subcollection (P3-02)
      // - 익명 사용자는 읽기만 가능, 쓰기(생성/수정/삭제) 불가
      // - Google 로그인 사용자만 텍스트 생성/수정/삭제 가능
      // ============================================================
      match /texts/{textId} {
        // 읽기는 익명 사용자도 허용 (기존 데이터 조회 가능)
        allow read: if isOwner(userId);
        
        // 생성: 소유자 + 비익명 사용자 + 유효한 데이터
        allow create: if isOwner(userId) && isNotAnonymous() && isValidTextData();
        
        // 수정: 소유자 + 비익명 사용자 + 유효한 데이터 + createdAt 불변
        allow update: if isOwner(userId) && isNotAnonymous() && isValidTextData()
          && request.resource.data.createdAt == resource.data.createdAt;
        
        // 삭제: 소유자 + 비익명 사용자
        allow delete: if isOwner(userId) && isNotAnonymous();
      }
      
      // ============================================================
      // User tracking posts subcollection (P3-03)
      // - 익명 사용자는 읽기만 가능, 쓰기(생성/수정/삭제) 불가
      // - Google 로그인 사용자만 포스트 생성/수정/삭제 가능
      // ============================================================
      match /posts/{postId} {
        // 읽기는 익명 사용자도 허용 (기존 데이터 조회 가능)
        allow read: if isOwner(userId);
        
        // 생성: 소유자 + 비익명 사용자 + 유효한 데이터
        allow create: if isOwner(userId) && isNotAnonymous() && isValidPostData();
        
        // 수정: 소유자 + 비익명 사용자 + 유효한 데이터 + createdAt 불변
        allow update: if isOwner(userId) && isNotAnonymous() && isValidPostData()
          && request.resource.data.createdAt == resource.data.createdAt;
        
        // 삭제: 소유자 + 비익명 사용자
        allow delete: if isOwner(userId) && isNotAnonymous();
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
